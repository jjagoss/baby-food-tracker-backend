{
  "name": "baby-food-tracker-backend",
  "version": "1.0.0",
  "main": "dist/app.js",
  "scripts": {
    "start": "ts-node src/server.ts",
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "test": "NODE_ENV=test jest --detectOpenHandles --runInBand",
    "typeorm": "typeorm-ts-node-commonjs",
    "db:start": "docker-compose up -d",
    "db:stop": "docker-compose down",
    "db:migrate:dev": "npm run migration:run",
    "db:migrate:test": "NODE_ENV=test npm run migration:run",
    "db:migrate:prod": "NODE_ENV=production npm run migration:run",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate src/migrations/migration -d src/config/database.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/config/database.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/config/database.ts",
    "prod:build": "docker-compose -f docker-compose.prod.yml build",
    "prod:start": "docker-compose -f docker-compose.prod.yml up -d",
    "prod:stop": "docker-compose -f docker-compose.prod.yml down",
    "prod:logs": "docker-compose -f docker-compose.prod.yml logs -f",
    "prod:migrate": "docker-compose -f docker-compose.prod.yml exec app npm run db:migrate:prod"
  },
  "dependencies": {
    "@types/node": "^16.11.10",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "nodemon": "^2.0.15",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.7.0",
    "typescript": "^4.5.2"
  }
}
