{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "lib": ["es6"],
    "types": ["node", "jest"]
  },
  "include": [
    "src/**/*",
    "src/jest.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}